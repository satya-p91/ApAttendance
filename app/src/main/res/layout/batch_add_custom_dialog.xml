<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="15dp"
    android:layout_gravity="center|center_vertical">

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Add new Batch here"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/txt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt"
        android:background="@color/colorCreamChese"
        android:hint="Enter batch name (eg. IT-A 3rd year)"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:maxLines="1"
        android:inputType="text"
        android:id="@+id/batch_name"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/batch_name"
        android:background="@color/colorCreamChese"
        android:hint="Enter Subject Code (eg. DA2121)"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:maxLines="1"
        android:inputType="text"
        android:id="@+id/sub_code"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/sub_code"
        android:layout_marginTop="15dp"
        android:background="@color/colorCreamChese"
        android:textColor="@color/colorPrimary"
        android:text="Cancel"
        android:layout_alignParentLeft="true"
        android:id="@+id/cancel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/sub_code"
        android:layout_marginTop="15dp"
        android:background="@color/colorCreamChese"
        android:textColor="@color/colorPrimary"
        android:text="add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:id="@+id/add"/>




</RelativeLayout>